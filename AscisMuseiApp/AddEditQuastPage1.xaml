<Page x:Class="AscisMuseiApp.AddEditQuastPage1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AscisMuseiApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditQuastPage1" Loaded="Page_Loaded">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,40,0,0" Width="310">
            <TextBlock FontWeight="Bold" Margin="10" FontSize="20">Редактирование расписания</TextBlock>
            <TextBlock>Дата</TextBlock>
            <DatePicker x:Name="D1"></DatePicker>
            <TextBlock>Сотрудник</TextBlock>
            <ComboBox x:Name="C1"></ComboBox>
            <TextBlock>Тип рабочего дня</TextBlock>
            <ComboBox x:Name="C2"></ComboBox>
            <TextBlock Margin="0,10,0,0">Название (Не обязательно)</TextBlock>
            <TextBox x:Name="T1"></TextBox>
            <TextBlock Margin="0,10,0,0">Описание (Не обязательно)</TextBlock>
            <TextBox Height="87" x:Name="T2"></TextBox>
            <Button Margin="5" Click="Button_Click">Сохранить</Button>
            <Button Margin="5" Click="Button_Click_1">Выход</Button>
        </StackPanel>
    </Grid>
</Page>
