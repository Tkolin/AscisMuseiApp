<Page x:Class="AscisMuseiApp.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AscisMuseiApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="192">
            <TextBlock   HorizontalAlignment="Center" FontWeight="Bold" FontSize="20" Margin="0,0,0,20">Авторизация</TextBlock>
            <TextBlock  FontWeight="Bold" Margin="10,0,0,0">Логин:</TextBlock>
            <TextBox></TextBox>
            <TextBlock  FontWeight="Bold" Margin="10,0,0,0">Пароль:</TextBlock>
            <TextBox></TextBox>
            <Button Margin="10" Width="50">Вход</Button>
        </StackPanel>
    </Grid>
</Page>
