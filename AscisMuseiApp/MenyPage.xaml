<Page x:Class="AscisMuseiApp.MenyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AscisMuseiApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenyPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical" Width="201">
            <TextBlock FontWeight="Bold" Margin="10" FontSize="20">Меню</TextBlock>
            <Button Margin="5" x:Name="N1" Click="N1_Click">Расписание смен</Button>
            <Button Margin="5" x:Name="N2" Click="N2_Click">Список пользователей</Button>
            <Button Margin="5" x:Name="btnExit" Click="btnExit_Click">Выход</Button>
        </StackPanel>
    </Grid>
</Page>
